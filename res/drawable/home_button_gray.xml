<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#99afab" />
            <stroke android:width="1dp" android:color="#99afab" />
            <corners android:radius="3dp" />
            <padding android:left="2dp" android:top="4dp" android:right="2dp" android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#99afab" android:endColor="#4e5c5a" android:angle="90.0" />
            <stroke android:width="1dp" android:color="#99afab" />
            <corners android:radius="4dp" />
            <padding android:left="2dp" android:top="4dp" android:right="2dp" android:bottom="4dp" />
        </shape>
    </item>
</selector>
