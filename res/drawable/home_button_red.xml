<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ef4444" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="3dp" />
            <padding android:left="2dp" android:top="4dp" android:right="2dp" android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#d58484" android:endColor="#b31c1d" android:angle="90.0" />
            <stroke android:width="1dp" android:color="#ef4444" />
            <corners android:radius="4dp" />
            <padding android:left="2dp" android:top="4dp" android:right="2dp" android:bottom="4dp" />
        </shape>
    </item>
</selector>
