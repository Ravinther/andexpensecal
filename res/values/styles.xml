        <item name="android:dividerPadding">10.0dip</item>
    </style>
    <style name="MyDarkHoloTheme" parent="@android:style/Theme.Holo">
        <item name="green">@color/green_dark</item>
        <item name="red">@color/red_dark</item>
    </style>
    <style name="MyDarkMaterialTheme" parent="@android:style/Theme.Material">
        <item name="green">@color/green_dark</item>
        <item name="red">@color/red_dark</item>
    </style>
    <style name="MyLightHoloTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
